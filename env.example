# Dubai Real Estate RAG Chat System - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
POSTGRES_DB=real_estate_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_PORT=5432
DATABASE_URL=postgresql://admin:password123@localhost:5432/real_estate_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache & Message Broker
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379/0

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
# ChromaDB Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8002

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Google AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
AI_MODEL=gemini-1.5-flash

# OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT & Authentication
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random-123456789
JWT_SECRET=your-jwt-secret-key-change-in-production-123456789
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# API Server
API_PORT=8000
HOST=0.0.0.0
PORT=8000

# Frontend
FRONTEND_PORT=3000

# Nginx (Production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Worker Configuration
MAX_WORKERS=4
BATCH_SIZE=50
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LOGIN_ATTEMPTS=5

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
ENABLE_BLUEPRINT_2=true
NURTURING_SCHEDULER_ENABLED=true
DOCUMENT_GENERATION_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus (Metrics)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true

# Test Configuration
TEST_DATABASE_URL=postgresql://admin:password123@localhost:5432/real_estate_test_db
TEST_REDIS_URL=redis://:redis123@localhost:6379/1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose Override
COMPOSE_PROJECT_NAME=real_estate_rag
COMPOSE_FILE=docker-compose.yml

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique secrets in production
# 3. Rotate secrets regularly
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service for production