{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@mock-data/*": [
        "./src/mock-data/*"
      ],
      "@propertypro/theme": [
        "../../packages/theme/src/index.ts"
      ],
      "@propertypro/theme/*": [
        "../../packages/theme/src/*"
      ],
      "@propertypro/store": [
        "../../packages/store/src/index.ts"
      ],
      "@propertypro/store/*": [
        "../../packages/store/src/*"
      ],
      "@propertypro/services": [
        "../../packages/services/src/index.ts"
      ],
      "@propertypro/services/*": [
        "../../packages/services/src/*"
      ],
      "@propertypro/features": [
        "../../packages/features/src/index.ts"
      ],
      "@propertypro/features/*": [
        "../../packages/features/src/*"
      ],
      "@propertypro/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@propertypro/ui/*": [
        "../../packages/ui/src/*"
      ],
      "react-native": [
        "./src/compat/react-native.ts"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}

