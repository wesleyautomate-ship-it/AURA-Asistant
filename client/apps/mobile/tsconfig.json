{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2019"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@propertypro/theme": ["../../packages/theme/src/index.ts"],
      "@propertypro/theme/*": ["../../packages/theme/src/*"],
      "@propertypro/store": ["../../packages/store/src/index.ts"],
      "@propertypro/store/*": ["../../packages/store/src/*"],
      "@propertypro/services": ["../../packages/services/src/index.ts"],
      "@propertypro/services/*": ["../../packages/services/src/*"],
      "@propertypro/features": ["../../packages/features/src/index.ts"],
      "@propertypro/features/*": ["../../packages/features/src/*"],
      "@propertypro/ui": ["../../packages/ui/src/index.ts"],
      "@propertypro/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}

